---
import type { PageSeoMetaData } from '@/types';
import { getUrlFromUri, type Uri } from '@/utils/url';
import { COMMON_SEO_METADATA } from '@/content/meta';

type Props = PageSeoMetaData;

const { author, applicationName, twitterHandle } = COMMON_SEO_METADATA;

const { title, description, image, alt, robots = 'index, follow' } = Astro.props;

const websiteUrl = getUrlFromUri(Astro.url.pathname as Uri);
---

<!-- Site Essentials -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="robots" content={robots} />
<link rel="canonical" href={websiteUrl} />
<link rel="icon" href="/favicon.ico" />
<meta name="application-name" content={applicationName} />

<!-- Additional meta -->
<meta name="author" content={author} />
<meta name="generator" content={Astro.generator} />

<!-- Open Graphs -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={websiteUrl} />
<meta property="og:image" content={image} />
<meta property="og:image:secure_url" content={image} />
<meta property="og:image:alt" content={alt} />
<meta property="og:site_name" content={applicationName} />

<!-- Twitter Specifies -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={twitterHandle} />
<meta name="twitter:creator" content={twitterHandle} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={image} />
